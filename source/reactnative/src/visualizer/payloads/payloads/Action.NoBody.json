{
	"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	"type": "AdaptiveCard",
	"version": "1.0",
	"body": [
		{
			"type": "Input.Text",
			"id": "multiline1",
			"isMultiline": true,
			"placeholder": "Add a comment"
		},
		{
			"type": "Input.Text",
			"id": "multiline2",
			"isMultiline": true,
			"placeholder": "Add a comment"
		}
	],
	"actions": [
		{
			"type": "Action.ShowCard",
			"title": "Set due date",
			"card": {
				"type": "AdaptiveCard",
				"version": "1.0",
				"body": [
					{
						"type": "Input.Date",
						"id": "dueDate"
					},
					{
						"type": "Input.Text",
						"id": "comment",
						"isMultiline": true,
						"placeholder": "Add a comment"
					},
		{
			"type": "Input.Number",
			"id": "numberComment",
			"placeholder": "Add a comment"
		}
				],
				"actions": [
					{
						"type": "Action.Submit",
						"title": "OK",
						"url": "http://adaptivecards.io"
					}
				]
			}
		},
		{
			"type": "Action.Submit",
			"title": "View",
			"url": "http://adaptivecards.io"
		},
		{
			"type": "Action.OpenUrl",
			"title": "Show Adaptive cards",
			"url": "http://adaptivecards.io"
		},
		{
			"type": "Action.ShowCard",
			"title": "Set something else",
			"card": {
				"type": "AdaptiveCard",
				"version": "1.0",
				"body": [
					{
						"type": "Input.Text",
						"id": "comment",
						"isMultiline": true,
						"placeholder": "Add a comment"
					},
		{
			"type": "Input.Number",
			"id": "numberComment",
			"placeholder": "Add a comment"
		}
				],
				"actions": [
					{
						"type": "Action.Submit",
						"title": "OK",
						"url": "http://adaptivecards.io"
					}
				]
			}
		}
	]
}
